@model IEnumerable<ITGWebTimeSheet2.Models.CustomersModule>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/_LayoutPages.cshtml";
}

<div class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fas fa-address-book "></i> Customers</h1>

        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item"><a href="#">Projects</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <div class="table-responsive">
                      
                        @using (Html.BeginForm("AddCustomers", "Admin", new { ReturnUrl = ViewBag.ReturnUrl },
                        FormMethod.Post, new { @class = "row" }))
                        {
                        @Html.AntiForgeryToken()
                        <div class="form-group col-md-3">
                            <!-- <label>Fullname</label>
        <input class="form-control" type="text" placeholder="" />-->
                            <label>Customer Name/ Company Name</label>
                            <input class="form-control" type="text" placeholder="Customer Name" name="name" maxlength="30"/>
                        </div>

                        <div class="form-group col-md-3">
                          
                            <label>CODE</label>
                            <input class="form-control" type="text" placeholder="Customer Code" name="code" maxlength="5"/>
                        </div>
                        <div class="form-group col-md-3">
                            <label>&nbsp; &nbsp;</label>
                            <button class="btn btn-primary form-control" type="submit" name="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Add</button>
                        </div>


                        }





                    </div>
                </div>
            </div>
        </div>
    </div>

   
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <h3 class="tile-title">Customer List</h3>
                    <div class="tile-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered" id="sampleTable">
                                <thead>
                                    <tr>
                                        <th>Customer Name/ Company Name</th>
                                        <th>Code</th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        
                                    <tr class="record">
                                        <td>
                                            <span id="cust1_@Html.DisplayFor(modelItem => item.id)" class="staff1_dbclick">@Html.DisplayFor(modelItem => item.name)</span>
                                            <span  id="cust2_@Html.DisplayFor(modelItem => item.id)" class="hidein">
                                                <input id="edit_name_@Html.DisplayFor(modelItem => item.id)" class="form-control cust_name" type="text" maxlength="30"   placeholder="Customer Name" name="name" value="@Html.DisplayFor(modelItem => item.name)" />
                                              
                                            </span>
                                              </td>
                                        <td>
                                            <span id="custcode1_@Html.DisplayFor(modelItem => item.id)" class="staff1_dbclick">@Html.DisplayFor(modelItem => item.code)</span>
                                            <span id="custcode2_@Html.DisplayFor(modelItem => item.id)" class="hidein">
                                                <input id="edit_code_@Html.DisplayFor(modelItem => item.id)" class="form-control cust_name" type="text" maxlength="5"  placeholder="Customer Name" name="name" value="@Html.DisplayFor(modelItem => item.code)" />

                                            </span>

                                        </td>
                                        <td>
                                            <!-- <a href="@Url.Action("EditCustomers", "Admin", new { id = item.id })" id="@Html.DisplayFor(modelItem => item.id)" data-toggle="tooltip" title="Edit"><i class="fas fa-edit"></i></a> -->
                                            <a href="#" id="@Html.DisplayFor(modelItem => item.id)" class="delcustomers"><i class="fas fa-times"></i></a>
                                        </td>
                                    </tr>

                                        
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>





    </div>
