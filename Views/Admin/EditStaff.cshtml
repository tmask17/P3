@model IEnumerable<ITGWebTimeSheet2.Models.Staff>

@{
    ViewBag.Title = "Staff";
    Layout = "~/Views/_LayoutInside.cshtml";
}

<div class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-users "></i> Staffs</h1>

        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item"><a href="#">Staffs</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <div class="table-responsive">
                        @using (Html.BeginForm("UpdateStaff", "Admin", new { ReturnUrl = ViewBag.ReturnUrl },
             FormMethod.Post, new { @class = "row" }))
                        {
                            @Html.AntiForgeryToken()

                            foreach (var item in Model)
                            {
                                <input type="hidden" name="id" value="@item.id" />
                                <div class="form-group col-md-3">
                                    <!-- <label>Fullname</label>
                <input class="form-control" type="text" placeholder="" />-->
                                    <label>Fullname</label>
                                    <input class="form-control" type="text" placeholder="Fullname" name="fullname" value="@item.fullname" />
                                </div>
                                <div class="form-group col-md-3">
                                    <label>Alias/ Nickname</label>
                                    <input class="form-control" type="text" placeholder="alias" name="alias" value="@item.alias" />
                                </div>
                                <div class="form-group col-md-3">
                                    <label>Email</label>
                                    <input class="form-control" type="email" placeholder="Fullname" name="email" value="@item.email" />
                                </div>
                                <div class="form-group col-md-2">
                                    <label>&nbsp; &nbsp;</label>
                                    <button class="btn btn-primary form-control" type="submit" name="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Update</button>
                                </div>

                                }
                            }


                        </div>
                </div>
            </div>
        </div>
    </div>


</div>